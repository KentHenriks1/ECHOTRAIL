# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/echotrail_dev

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS and Security Headers
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
MAPBOX_ACCESS_TOKEN=
GOOGLE_MAPS_API_KEY=
WEATHER_API_KEY=
ANALYTICS_API_KEY=

# Cloud Storage
GCS_BUCKET_NAME=echotrail-uploads-dev
GCS_PROJECT_ID=
GCS_KEY_FILE=

# Email Service
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@echotrail.com

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/api.log
ENABLE_REQUEST_LOGGING=true

# Monitoring & Health
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# File Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/gpx+xml,application/json

# Geospatial Settings
DEFAULT_SPATIAL_REFERENCE=4326
MAX_TRAIL_POINTS=10000
GEOFENCE_BUFFER_METERS=100
