# Terraform Configuration
TF_VAR_project_id=echotrail-dev
TF_VAR_region=europe-west1
TF_VAR_environment=development

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=echotrail-dev
GCP_REGION=europe-west1
GCP_ZONE=europe-west1-b

# Terraform State Backend
TF_VAR_backend_bucket=echotrail-terraform-state
TF_VAR_backend_prefix=environments/dev

# Kubernetes Configuration
KUSTOMIZE_NAMESPACE=echotrail-dev
K8S_CLUSTER_NAME=echotrail-dev-cluster
K8S_CONTEXT=gke_echotrail-dev_europe-west1_echotrail-dev-cluster

# Database Configuration
TF_VAR_db_instance_name=echotrail-db-dev
TF_VAR_db_tier=db-f1-micro
TF_VAR_db_version=POSTGRES_16

# Redis Configuration
TF_VAR_redis_instance_name=echotrail-redis-dev
TF_VAR_redis_tier=BASIC
TF_VAR_redis_memory_size_gb=1

# GKE Configuration
TF_VAR_cluster_name=echotrail-dev-cluster
TF_VAR_node_pool_name=primary-nodes
TF_VAR_min_node_count=1
TF_VAR_max_node_count=3
TF_VAR_machine_type=e2-medium

# Storage Configuration
TF_VAR_storage_bucket=echotrail-uploads-dev
TF_VAR_backup_bucket=echotrail-backups-dev

# DNS Configuration
TF_VAR_domain_name=dev.echotrail.com
TF_VAR_subdomain_api=api.dev.echotrail.com

# Monitoring Configuration
TF_VAR_enable_monitoring=true
TF_VAR_monitoring_retention_days=7

# Security Configuration
TF_VAR_enable_network_policy=true
TF_VAR_enable_pod_security_policy=true
TF_VAR_authorized_networks=0.0.0.0/0
