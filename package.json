{
  "name": "echotrail",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "android:go": "expo start --android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "test": "jest",
    "test:ui": "jest --watch",
    "test:run": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "deadcode": "knip",
    "deps:unused": "depcheck",
    "ts:prune": "ts-prune",
    "semgrep": "semgrep --config p/security-audit --config p/javascript --config p/typescript",
    "security:check": "snyk test",
    "test:contracts": "jest src/__tests__/contracts",
    "test:db": "jest src/__tests__/database",
    "test:integration": "jest src/__tests__/integration",
    "test:api": "pnpm run test:integration",
    "test:api:advanced": "pnpm run test:contracts && pnpm run test:integration",
    "test:performance": "jest src/__tests__/performance",
    "test:advanced": "jest src/__tests__/database/db-advanced.test.ts src/__tests__/integration/api-advanced.test.ts",
    "test:all": "node scripts/run-all-tests.js",
    "test:ci": "jest --coverage --verbose",
    "test:report": "node scripts/run-all-tests.js && echo 'Test report available in test-reports/latest.json'",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "build:ios:simulator": "expo build:ios --type simulator",
    "build:analyze": "expo export --public-url https://example.com && npx expo-bundle-analyzer",
    "qa": "pnpm fmt:fix && pnpm lint:fix && pnpm typecheck && pnpm test:run && pnpm build",
    "qa:full": "pnpm fmt:fix && pnpm lint:fix && pnpm typecheck && pnpm deadcode && pnpm deps:unused && pnpm test:coverage && pnpm test:api && pnpm e2e && pnpm semgrep",
    "qa:db": "pnpm fmt:fix && pnpm lint:fix && pnpm typecheck && pnpm test:db && pnpm test:api",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm run qa",
    "pre-push:full": "pnpm run qa:full",
    "maestro:test": "maestro test .maestro/flows/",
    "maestro:smoke": "maestro test .maestro/flows/smoke_tests.yaml",
    "eas:build": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1",
    "eas:build:dev": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment development",
    "eas:build:preview": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment preview",
    "eas:build:staging": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment staging",
    "eas:build:beta": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment beta",
    "eas:build:prod": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment production",
    "eas:build:ios": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Platform ios",
    "eas:build:all": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Platform all",
    "eas:deploy:beta": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment beta -AutoSubmit",
    "eas:deploy:prod": "powershell -ExecutionPolicy Bypass -File scripts/build-deploy.ps1 -Environment production -AutoSubmit",
    "eas:whoami": "npx eas whoami",
    "eas:list": "npx eas build:list",
    "eas:doctor": "npx expo doctor",
    "eas:validate": "node scripts/validate-config.js",
    "sync-native": "node scripts/sync-native-config.js",
    "snack": "node scripts/snack-utils.js",
    "snack:list": "node scripts/snack-utils.js list-components",
    "snack:open": "node scripts/snack-utils.js open-snack",
    "snack:extract": "node scripts/snack-utils.js extract-component",
    "snack:tunnel": "node scripts/snack-utils.js tunnel-start",
    "snack:qr": "node scripts/snack-cli-advanced.js qr-upload",
    "snack:export": "node scripts/export-to-snack.js export",
    "snack:zip": "node scripts/export-to-snack.js create-zip",
    "snack:full": "node scripts/export-to-snack.js export && node scripts/export-to-snack.js open-snack",
    "snack:upload": "node scripts/upload-to-snack.js upload",
    "snack:test": "node scripts/upload-to-snack.js test-upload",
    "snack:smart": "node scripts/upload-to-snack.js smart",
    "snack:auto-copy": "node scripts/snack-cli-advanced.js auto-copy",
    "snack:serve": "node scripts/snack-cli-advanced.js serve-local",
    "snack:sdk-install": "node scripts/snack-sdk-cli.js install-sdk",
    "snack:sdk-create": "node scripts/snack-sdk-cli.js create-snack",
    "snack:sdk-upload": "node scripts/snack-sdk-cli.js upload-direct",
    "guaranteed:build": "pnpm run eas:validate && pnpm run qa && pnpm run eas:build:dev",
    "guaranteed:deploy": "pnpm run eas:validate && pnpm run qa:full && pnpm run eas:deploy:prod",
    "github:setup": "node scripts/setup-github-labels.js",
    "github:issues": "gh issue list --state open",
    "github:prs": "gh pr list --state open",
    "github:releases": "gh release list",
    "release:major": "npm version major && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:patch": "npm version patch && git push origin main --tags"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "11.4.1",
    "@react-native-community/slider": "5.0.1",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/native": "^7.0.0",
    "@react-navigation/stack": "^7.4.8",
    "@sentry/react-native": "~6.20.0",
    "expo": "^54.0.7",
    "expo-av": "~16.0.7",
    "expo-blur": "~15.0.7",
    "expo-build-properties": "^1.0.9",
    "expo-camera": "~17.0.8",
    "expo-constants": "~18.0.0",
    "expo-crypto": "~15.0.7",
    "expo-device": "8.0.8",
    "expo-file-system": "~19.0.14",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image-picker": "~17.0.8",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "~8.0.8",
    "expo-local-authentication": "~17.0.7",
    "expo-location": "~19.0.7",
    "expo-media-library": "~18.2.0",
    "expo-notifications": "0.32.11",
    "expo-secure-store": "~15.0.0",
    "expo-sharing": "~14.0.7",
    "expo-speech": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "expo-task-manager": "^14.0.7",
    "expo-updates": "^29.0.11",
    "i18next": "^25.4.2",
    "knex": "^3.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.1.2",
    "react-native": "^0.81.0",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-maps": "^1.20.1",
    "react-native-reanimated": "^4.1.0",
    "react-native-safe-area-context": "^5.0.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.1",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@faker-js/faker": "^10.0.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@types/node-fetch": "^3.0.3",
    "@types/react": "^19.1.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/ui": "2.1.9",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.12",
    "jsdom": "^27.0.0",
    "knip": "^5.63.1",
    "lint-staged": "^15.5.2",
    "metro": "0.83.1",
    "msw": "^2.11.2",
    "node-fetch": "^3.3.2",
    "node-localstorage": "^2.2.1",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "react-native-vector-icons": "^10.3.0",
    "react-test-renderer": "19.1.0",
    "snyk": "^1.1299.0",
    "ts-jest": "^29.4.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "overrides": {
      "expo-av": "~16.0.7",
      "expo-crypto": "~15.0.7",
      "expo-local-authentication": "~17.0.7",
      "@react-native-community/slider": "5.0.1",
      "@vitest/ui": "2.1.9"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
