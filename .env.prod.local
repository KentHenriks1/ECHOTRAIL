EXTERNAL_REDIS_URL=redis://:password@your-redis-cloud.com:6379

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
ENABLE_METRICS=true

# Deployment URLs (update with your actual domains)
FRONTEND_URL=https://app.your-domain.com
API_URL=https://api.your-domain.com

# Node Environment
NODE_ENV=production

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
