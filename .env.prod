# EchoTrail API - Production Environment Variables
# Copy this file to .env.prod.local and fill in the actual values

# Database Configuration
DB_NAME=echotrail
DB_USER=echotrail
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_DATABASE_PASSWORD
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}?schema=public

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_JWT_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://app.your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# Server Configuration
NODE_ENV=production
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SWAGGER_ENABLED=false

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Alerts (optional)
# SENTRY_DSN=https://your-sentry-dsn
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email Configuration (for future notifications)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-email-password
