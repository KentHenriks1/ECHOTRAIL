# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_WS_URL=ws://localhost:3000

# Map Services
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=

# App Configuration
EXPO_PUBLIC_APP_NAME=EchoTrail
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUNDLE_ID=com.echotrail.app
EXPO_PUBLIC_DEEP_LINK_SCHEME=echotrail

# Feature Flags
EXPO_PUBLIC_ENABLE_BACKGROUND_LOCATION=true
EXPO_PUBLIC_ENABLE_OFFLINE_MAPS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Analytics & Monitoring
EXPO_PUBLIC_ANALYTICS_KEY=
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_AMPLITUDE_API_KEY=

# Development & Debug
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Location Settings
EXPO_PUBLIC_DEFAULT_LATITUDE=59.9139
EXPO_PUBLIC_DEFAULT_LONGITUDE=10.7522
EXPO_PUBLIC_DEFAULT_ZOOM=10
EXPO_PUBLIC_LOCATION_ACCURACY=high
EXPO_PUBLIC_LOCATION_DISTANCE_FILTER=5
EXPO_PUBLIC_LOCATION_INTERVAL=1000

# Offline & Caching
EXPO_PUBLIC_CACHE_SIZE_MB=100
EXPO_PUBLIC_OFFLINE_MAP_MAX_ZOOM=15
EXPO_PUBLIC_SYNC_INTERVAL_MS=30000

# Social & Sharing
EXPO_PUBLIC_ENABLE_SOCIAL_SHARING=true
EXPO_PUBLIC_SHARE_URL_BASE=https://echotrail.com/trail

# Database - Neon PostgreSQL with AI Extensions
NEON_DATABASE_URL=postgresql://neondb_owner:password@your-project.region.neon.tech/neondb?sslmode=require

# AI Services (Server-side only, never expose in EXPO_PUBLIC_*)
OPENAI_API_KEY=sk-your_openai_api_key_here
ZENTRIC_AI_API_KEY=your_zentric_api_key_here

# AI Services (Client-side - Optional, user can configure in app)
EXPO_PUBLIC_OPENAI_API_KEY=

# AI Configuration
EXPO_PUBLIC_ENABLE_AI_STORIES=true
EXPO_PUBLIC_ENABLE_TTS=true
EXPO_PUBLIC_ENABLE_PERSONALIZATION=true
EXPO_PUBLIC_DEFAULT_VOICE_MODEL=nova
EXPO_PUBLIC_DEFAULT_STORY_LANGUAGE=no
EXPO_PUBLIC_STORY_TRIGGER_RADIUS=100

# API Configuration
EXPO_PUBLIC_API_URL=https://api.echotrail.app
EXPO_PUBLIC_API_TIMEOUT=30000
DATABASE_URL=postgresql://neondb_owner:password@your-project.region.neon.tech/neondb?sslmode=require

# Push Notifications
EXPO_PUBLIC_ONESIGNAL_APP_ID=your_onesignal_app_id
EXPO_PUSH_TOKEN=

# External Auth (if using)
EXPO_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
EXPO_PUBLIC_AUTH0_CLIENT_ID=your_auth0_client_id

# Security
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_SESSION_TIMEOUT_MINUTES=30
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=false
EXPO_PUBLIC_USE_LOCAL_API=false

# Secrets Management (NEVER COMMIT REAL VALUES)
# Use GitHub Secrets, environment variables, or secure vaults for production
